<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE thunderbots [
<!ELEMENT thunderbots (params , joysticks , robots)>
<!ELEMENT params (category)*>
<!ELEMENT category (category | boolean | integer | double)*>
<!ELEMENT boolean (#PCDATA)>
<!ELEMENT integer (#PCDATA)>
<!ELEMENT double (#PCDATA)>
<!ELEMENT joysticks (joystick)*>
<!ELEMENT joystick (axes , buttons)>
<!ELEMENT axes (mapping)*>
<!ELEMENT buttons (mapping)*>
<!ELEMENT mapping EMPTY>
<!ELEMENT robots (robot)*>
<!ELEMENT robot (kicker)>
<!ELEMENT kicker EMPTY>
<!ATTLIST category name CDATA #REQUIRED>
<!ATTLIST boolean name CDATA #REQUIRED>
<!ATTLIST integer name CDATA #REQUIRED>
<!ATTLIST double name CDATA #REQUIRED>
<!ATTLIST joystick name CDATA #REQUIRED>
<!ATTLIST mapping logical CDATA #REQUIRED>
<!ATTLIST mapping physical CDATA #REQUIRED>
<!ATTLIST robot id CDATA #REQUIRED>
<!ATTLIST kicker directional CDATA #REQUIRED>
]>
<thunderbots>
  <params>
    <category name="AI">
      <category name="Param">
        <double name="Average Player Velocity">1.5</double>
      </category>
    </category>
    <category name="Backend">
      <category name="XBee">
        <double name="Loop Delay">0.100</double>
      </category>
    </category>
    <category name="MB">
      <double name="ori distance threshold">0.100</double>
      <double name="ori velocity threshold">0.030</double>
      <double name="pos distance threshold">0.050</double>
      <double name="pos velocity threshold">0.030</double>
    </category>
    <category name="Nav">
      <category name="Pivot">
        <double name="offset angle">80</double>
        <double name="offset distance">0</double>
        <double name="orientation offset">30</double>
      </category>
      <category name="Pivot2">
        <double name="offset angle (degrees)">30</double>
        <double name="offset distance">0.15</double>
        <double name="orientation offset (degrees)">30</double>
      </category>
      <category name="PivotAram">
        <double name="max acceleration">10</double>
        <double name="pivot radius">1.00</double>
      </category>
      <category name="RRT">
        <double name="Buffer behind ball for chase (meters)">0.250</double>
        <double name="Chase angle range for behind target (degrees)">30.0</double>
        <double name="Distance to destination when we stop looking for a path (m)">0.080</double>
        <double name="Distance to extend the tree on each step (m)">0.100</double>
        <integer name="Number of iterations to go through before we give best partial path">200</integer>
        <double name="Pivot: offset angle (degrees)">58</double>
        <double name="Pivot: offset distance">0.11</double>
        <double name="Pivot: orientation offset (degrees)">14</double>
      </category>
      <category name="Util">
        <double name="Buffer avoid ball tiny (meters)">0.050</double>
        <double name="Buffer avoid defense area (meters)">0.000</double>
        <double name="Buffer for equal priority friendly robot (meters)">0.100</double>
        <double name="Buffer for higher priority friendly robot (meters)">0.200</double>
        <double name="Buffer for lower priority friendly robot (meters)">0.050</double>
        <boolean name="enforce that robots stay on own half ">false</boolean>
        <double name="The amount of distance to maintain from enemy robots">0.100</double>
      </category>
    </category>
    <category name="NC">
      <double name="distance in the x direction to set the navigation points">0.400</double>
      <double name="distance in the y direction to set the navigation points">0.500</double>
      <double name="pos distance threshold">0.200</double>
    </category>
    <category name="oldAI">
      <boolean name="goalie dive for the ball">true</boolean>
      <double name="goalie should ignore direction of ball">0.050</double>
      <integer name="Grid X size">25</integer>
      <integer name="Grid Y size">25</integer>
      <double name="kickoff: angle to separate players (degrees)">40.0</double>
      <double name="Lone goalie distance to goal post (m)">0.300</double>
      <double name="max goalie dist from goal (robot radius)">3.00</double>
      <double name="shrink robot radius">1.100</double>
      <double name="stop: angle to separate players (degrees)">20.0</double>
      <boolean name="Test strategy catch ball">true</boolean>
      <boolean name="Test strategy Ram ball">true</boolean>
      <boolean name="Test strategy recieve ball">true</boolean>
      <boolean name="Test strategy stay own half">true</boolean>
    </category>
    <category name="RC">
      <category name="Circle">
        <double name="amount to scale controller velocities by">2.00</double>
      </category>
      <category name="fuzzy2">
        <double name="max acc">3.00</double>
      </category>
      <category name="PID3">
        <double name="angular -differential">1.0</double>
        <double name="angular +integral">0.00</double>
        <double name="angular max velocity">12.00</double>
        <double name="angular +proportional">12.00</double>
        <double name="(CARE) angular slowdown when translating">1.010</double>
        <boolean name="(CARE) flip trans&amp;ang slowdown">false</boolean>
        <boolean name="(CARE) reduce angular velocity when translating">false</boolean>
        <boolean name="do reset when target changes">false</boolean>
        <double name="integral decay (%)">50.0</double>
        <double name="x to y ratio">0.810</double>
        <double name="xy -differential">1.0</double>
        <double name="xy +integral">0.00</double>
        <double name="xy max acceleration">5.00</double>
        <double name="xy max velocity">12.00</double>
        <double name="xy +proportional">12.00</double>
        <double name="YA ratio">0.00</double>
      </category>
    </category>
    <category name="STP">
      <category name="Action">
        <category name="block">
          <double name="block threshold distance in terms of robot radius">3.000</double>
        </category>
        <category name="defend">
          <double name="Distance the defender should repel the ball in robot radius">4.000</double>
        </category>
        <category name="Goalie">
          <double name="Lone Goalie: distance to goal post (m)">0.300</double>
        </category>
        <category name="shoot">
          <double name="Angle threshold (in degrees) that defines passing accuracy, smaller is more accurate">5.0</double>
          <double name="Angle threshold (in degrees) that the reciever must be with respect to passer when shot, smaller is more accurate">80.0</double>
          <double name="Decay constant for the ball velocity">0.100</double>
          <double name="kicking speed for making a pass">4.75</double>
          <double name="reduced radius for calculating best shot (robot radius ratio)">0.800</double>
        </category>
        <category name="spin">
          <double name="change in orientation every time tick for move spin">1.500</double>
        </category>
      </category>
      <category name="ball">
        <double name="circle radius in front of enemy robot to consider possesion (meters)">0.100</double>
        <double name="circle radius in front of robot to enable pivot (meters)">0.100</double>
        <boolean name="Smart possess ball (instead of has ball only)">true</boolean>
      </category>
      <category name="defense">
        <boolean name="goalie hug switch">false</boolean>
        <double name="max goalie dist from goal (robot radius)">3.00</double>
        <double name="shrink robot radius">1.100</double>
      </category>
      <category name="enemy">
        <double name="Enemy pass width (robot radius)">3.00</double>
        <double name="Enemy shoot accuracy (degrees)">7.0</double>
      </category>
      <category name="evaluation">
        <double name="speed goalie should ignore direction of ball">0.050</double>
        <double name="Steal threshold: distance of ball from enemy (robot radius)">1.100</double>
      </category>
      <category name="Goalie">
        <boolean name="Goalie is lowest index">true</boolean>
        <integer name="Goalie pattern index">6</integer>
      </category>
      <category name="Kickoff">
        <double name="kickoff: angle to separate players (degrees)">40.0</double>
      </category>
      <category name="offense">
        <double name="enemy avoidance distance (robot radius)">3.00</double>
        <integer name="grid x size">20</integer>
        <integer name="grid y size">20</integer>
        <double name="Scoring weight for angle from ball to goal at robot (-ve)">2.0</double>
        <double name="Scoring weight for angle to goal (POWER, careful)">2.5</double>
        <double name="Scoring weight for ball progress (+ve)">1.0</double>
        <double name="Scoring weight for distance to ball (-ve)">1.0</double>
        <double name="Scoring weight for distance to enemy goal (-ve)">1.0</double>
        <double name="Scoring weight for everything">500</double>
        <double name="Scoring weight for nearest enemy (+ve)">1.0</double>
        <double name="Width for passing (robot radius)">2.00</double>
      </category>
      <category name="param">
        <double name="minimum region available for baller_can_shoot to be true (degrees)">5.7</double>
      </category>
      <category name="Pass">
        <double name="Minimum distance for pass play">0.500</double>
      </category>
      <category name="Play">
        <category name="Enable">
          <boolean name="CMDBasic2Block">true</boolean>
          <boolean name="CMDBasicCorner">false</boolean>
          <boolean name="CMDNaive">false</boolean>
          <boolean name="CMONaive">false</boolean>
          <boolean name="DefensiveBlock">true</boolean>
          <boolean name="FranticDefense">true</boolean>
          <boolean name="FreeKickEnemy">true</boolean>
          <boolean name="FreeKickFriendly">true</boolean>
          <boolean name="FreeKickFriendlyPass">true</boolean>
          <boolean name="FreeKickFriendlyRepel">true</boolean>
          <boolean name="FriendlyCornerPlay1">true</boolean>
          <boolean name="GrabBall">true</boolean>
          <boolean name="JustBlockShoot">true</boolean>
          <boolean name="JustGoalie">true</boolean>
          <boolean name="JustRepel">true</boolean>
          <boolean name="JustShoot">true</boolean>
          <boolean name="JustSpin">true</boolean>
          <boolean name="KickoffEnemy">true</boolean>
          <boolean name="KickoffFriendly">true</boolean>
          <boolean name="Lone2Player">true</boolean>
          <boolean name="OffensiveBlock">true</boolean>
          <boolean name="OurCornerPlay">true</boolean>
          <boolean name="PassDefensive">true</boolean>
          <boolean name="PassOffensive">true</boolean>
          <boolean name="Pass Play 0 0">true</boolean>
          <boolean name="Pass Play 1.2 -1.5">true</boolean>
          <boolean name="Pass Play 1.2 1.5">true</boolean>
          <boolean name="PassTest">true</boolean>
          <boolean name="PenaltyEnemy">true</boolean>
          <boolean name="PenaltyFriendly">true</boolean>
          <boolean name="Stop">true</boolean>
          <boolean name="TheirCornerPlay">true</boolean>
        </category>
        <category name="Priority 0=low, 10=hi, 5=default">
          <integer name="CMDBasic2Block">5</integer>
          <integer name="CMDBasicCorner">5</integer>
          <integer name="CMDNaive">5</integer>
          <integer name="CMONaive">5</integer>
          <integer name="DefensiveBlock">5</integer>
          <integer name="FranticDefense">5</integer>
          <integer name="FreeKickEnemy">5</integer>
          <integer name="FreeKickFriendly">5</integer>
          <integer name="FreeKickFriendlyPass">5</integer>
          <integer name="FreeKickFriendlyRepel">5</integer>
          <integer name="FriendlyCornerPlay1">5</integer>
          <integer name="GrabBall">5</integer>
          <integer name="JustBlockShoot">5</integer>
          <integer name="JustGoalie">5</integer>
          <integer name="JustRepel">0</integer>
          <integer name="JustShoot">5</integer>
          <integer name="JustSpin">5</integer>
          <integer name="KickoffEnemy">5</integer>
          <integer name="KickoffFriendly">5</integer>
          <integer name="Lone2Player">5</integer>
          <integer name="OffensiveBlock">5</integer>
          <integer name="OurCornerPlay">5</integer>
          <integer name="PassDefensive">5</integer>
          <integer name="PassOffensive">5</integer>
          <integer name="Pass Play 0 0">5</integer>
          <integer name="Pass Play 1.2 -1.5">5</integer>
          <integer name="Pass Play 1.2 1.5">5</integer>
          <integer name="PassTest">5</integer>
          <integer name="PenaltyEnemy">5</integer>
          <integer name="PenaltyFriendly">5</integer>
          <integer name="Stop">5</integer>
          <integer name="TheirCornerPlay">5</integer>
        </category>
      </category>
      <category name="predicates">
        <double name="enemy avoidance distance (robot radius)">3.00</double>
      </category>
      <category name="shoot">
        <double name="Angle threshold (in degrees) that defines shoot accuracy, bigger is more accurate">0.0</double>
      </category>
      <category name="Tactic">
        <category name="pass">
          <double name="dist from target when passee hack is applicable (meters)">0.100</double>
          <double name="Hack to get reciever to move more quickly to intercept pos by modifying dest (meters)">0.113</double>
          <boolean name=" pass blocked means that Passer should fail ">true</boolean>
          <boolean name=" shot on net avaiable means that Passer should fail ">true</boolean>
          <double name=" the buffer (meters) in which passee must be with repect to target region before valid ">0.000</double>
          <double name=" the radius (meters) in which passer must be with repect to ball before valid ">1.000</double>
          <double name="velocity of pass threshold">1.000</double>
          <double name="velocity to ignore">0.200</double>
          <double name="when passer within this angle tol passee responds to passer direction">30.0</double>
        </category>
        <double name="stop: angle to separate players (degrees)">20.0</double>
      </category>
      <category name="test_pass">
        <double name=" angle tolerance that the passer needs to be with respect to the passee">20.0</double>
        <double name=" angle tolerance that the passer needs to be with respect to the target">30.0</double>
        <double name=" distance tolerance that the passee needs to be with respect to the passer shot">0.050</double>
        <double name="Hack to get reciever to move more quickly to intercept pos by modifying dest (meters)">0.030</double>
        <boolean name="lower numbered bot is passer">true</boolean>
        <integer name="passing target points">0</integer>
        <double name="velocity to ignore">0.100</double>
      </category>
      <category name="util">
        <double name="distance for ball possesion (x ball radius)">2.000</double>
        <double name="if dribble &gt; this time, force shoot (sec)">2.00</double>
        <boolean name="posses ball is has ball">true</boolean>
        <double name="Shooting Accuracy General (degrees)">10.0</double>
        <double name="time we can prepare during special plays (sec)">3</double>
      </category>
    </category>
  </params>
  <joysticks>
    <joystick name="Logitech Logitech Dual Action">
      <axes>
        <mapping logical="0" physical="3"/>
        <mapping logical="1" physical="2"/>
        <mapping logical="2" physical="0"/>
        <mapping logical="3" physical="1"/>
      </axes>
      <buttons>
        <mapping logical="dribble" physical="1"/>
        <mapping logical="kick" physical="3"/>
        <mapping logical="scram" physical="2"/>
      </buttons>
    </joystick>
    <joystick name="Xbox 360 Wireless Receiver">
      <axes>
        <mapping logical="0" physical="4"/>
        <mapping logical="1" physical="3"/>
        <mapping logical="2" physical="0"/>
        <mapping logical="3" physical="1"/>
      </axes>
      <buttons>
        <mapping logical="dribble" physical="0"/>
        <mapping logical="kick" physical="3"/>
        <mapping logical="scram" physical="1"/>
      </buttons>
    </joystick>
  </joysticks>
  <robots>
    <robot id="0">
	  <kicker directional="false"/>
	</robot>
	<robot id="2">
	  <kicker directional="false"/>
	</robot>
	<robot id="3">
	  <kicker directional="true"/>
	</robot>
  </robots>
</thunderbots>
